varnishtest "Method not allowed"

varnish v1 -vcl {
	import fsdirector from "${vmod_topbuild}/src/.libs/libvmod_fsdirector.so" ;

	backend static {
		.host = "127.0.0.1";
		.port = "8080";
	}

	sub vcl_init {
		new fs = fsdirector.file_system(static);
	}
} -start

client c1 {
	txreq -req "PUT" -url "${vmod_topbuild}/src/tests/www/index.html"
	rxresp
	expect resp.status == 405

	txreq -req "POST" -url "${vmod_topbuild}/src/tests/www/index.html"
	rxresp
	expect resp.status == 405

	txreq -req "DELETE" -url "${vmod_topbuild}/src/tests/www/index.html"
	rxresp
	expect resp.status == 405

	# handled by varnish, the backend will receive a GET
	txreq -req "HEAD" -url "${vmod_topbuild}/src/tests/www/index.html"
	rxresp -no_obj
	expect resp.status == 200
	expect resp.http.Content-Length == 5
} -run

